{
    "title": "Emacs Mode",
    "rules": [
        {
            "description": "Change Left_control M to ReturnOrEnter Key In Bear",
            "manipulators": [
                {
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^net.shinyfrog.bear"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
